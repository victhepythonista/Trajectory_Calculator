

<Button>:
    size_hint:.6,.1
    font:"consolas"
    font_size:20
   
Manager:
    MainScreen:
        id:mainscreen
        name:"mainscreen"
        graph_book_open:'0'
        Label:
            background_image : "backend/homescreen.png"

            canvas.before:
             
                Rectangle:
                    size:self.size
                    pos:self.pos
                    source:"data/homescreen.png"
        Label:
            text:"TRAJECTORY CALCULATOR"
            pos_hint:{"x":.1,'y':.8}
            size_hint:.8,.1
            underline : True
        
        Button:
            pos_hint:{ 'x':.2, 'y':.5}
            text:"open Graphbook"
            on_press:
                mainscreen.open_graphbook(app)
            
        Button:
            pos_hint:{  'x':.2, 'y':.3}
            text:"help"
            on_press:app.root.current = "helpscreen"
        Button:
            pos_hint:{  'x':.2, 'y':.1}
            text:"QUIT"
            on_press:mainscreen.quitapp()
    HelpScreen:
        name:"helpscreen"
        id:helpscreen
        info:info
        Button:
            size_hint:.5,.1
            text:"back"
            pos_hint:{'x':.2, 'y':.8}
            on_press:app.root.current = "mainscreen"
        TextInput:
            
            id:info
            size_hint:1,.8
            pos_hint:{'x':0, 'y':0}
            
